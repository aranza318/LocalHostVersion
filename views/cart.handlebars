    <h1 class="color1">Carrito</h1>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <ul class="color1">
          {{#each products}}
            <li>
              {{this.product.title}}
              - ${{this.product.price}}
              - Cantidad:
              {{this.quantity}}
              <button class="btn-delete-cart" onclick="eliminarProductoDelCarrito('{{this.product._id}}')">Eliminar</button>
            </li>
          {{/each}}
        </ul>
       
        <div class="color1"> 
          <button id="payment" class="botons">Pagar</button>
        
        </div>
      </table>
    </div>
  </div>
